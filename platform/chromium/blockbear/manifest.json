{
    "manifest_version": 2,

    "name": "BlockBear",
    "version": "0.0.1",

    "default_locale": "en",
    "description": "__MSG_extShortDesc__",
    "icons": {
        "16": "images/icon_16.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },

    "browser_action": {
        "default_icon": {
            "16": "images/browsericons/icon_off.png",
            "32": "images/browsericons/icon_off@2x.png"  
        },
        "default_title": "BlockBear",
        "default_popup": "popup.html"
    },

    "author": "TunnelBear",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/vapi-client.js",
                "js/blockbear-contentscript-start.js",
                "js/contentscript-start.js"
            ],
            "css": [
                "css/block.css"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/contentscript-end.js",
                "js/blockbear-contentscript-end.js"
            ],
            "css": [
                "css/content.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "https://*.adblockplus.org/*",
                "https://*.adblockplus.me/*",
                "https://www.fanboy.co.nz/*"
            ],
            "js": [
                "js/subscriber.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "minimum_chrome_version": "22.0",
    "options_page": "settings.html",
    // "options_ui": {
    //     "page": "options_ui.html"
    // },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "privacy",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "images/flash_blocked.png",
        "images/flash_blocked2x.png",
        "images/flash_unblock.png",
        "images/flash_unblock2x.png",
        "js/canvas-blocker.js",
        "js/pixel-tracking.js"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "short_name": "BlockBear"
}